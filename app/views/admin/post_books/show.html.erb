<div class="container mt-5">
  <div class="row">
    <div class="col-11 col-md-8 mx-auto">
      <div class="row">
        <div class="col-12 col-lg-3 mx-auto px-0 mt-4">
          <%= attachment_image_tag @post_book, :post_book_image, fallback: "no_image_book.jpg", size:'145x115' %>
          <p class="mt-3 mb-0"><%= @post_book.post_book_author %></p>
          <p>『<%= @post_book.post_book_title %>』</p>
        </div>
        <div class="col-12 col-lg-9 mx-auto p-0">
          <div class="text-right">
            <%= link_to "削除する", admin_post_book_path(@post_book), method: :delete, "data-confirm" => "本当に削除しますか？", class: 'btn btn-sm btn-danger' %>
          </div>
          <div class="row">
            <div class="col-md-3 col-lg-2 p-0 text-center mt-3">
              <%= link_to user_path(@post_book.user_id) do %>
                <%= attachment_image_tag @post_book.user, :profile_image, fallback: "no_image.png", size:'100x70' %>
                <p class="text-dark"><%= @post_book.user.nickname %></p>
              <% end %>
            </div>
            <div class="col-md-9 col-lg-10 p-0">
              <p class="small text-right mr-3 mb-md-0"><%= @post_book.created_at.strftime('%Y/%m/%d') %></p>
              <h3 class="text-center font-weight-bold mr-lg-5 mt-lg-2"><%= @post_book.title %></h3>
            </div>
          </div>
          <p class="mt-3 mt-md-0 ml-3 mb-0 text-right">
            <span class="border mx-2"><%= @post_book.genre.name %></span>
            <i class="fas fa-comments"></i>: <%= @post_book.comments.count %>
            <i class="fas fa-thumbs-up"></i>: <%= @post_book.favorites.count %>
          </p>
        </div>
      </div>
      <div class="row">
        <span><投稿内容></span>
        <div class="col-12 border">
          <%= @post_book.content %>
        </div>
      </div>
      <div class="row">
        <table class="table mt-5">
          <% @post_book.comments.each do |comment| %>
          <tr class="border-bottom">
            <td class="text-center p-0", style="width:20%">
              <%= attachment_image_tag comment.user, :profile_image, fallback: "no_image_book.jpg", size:'100x70', class: 'pb-comment-image' %><br>
              <%= comment.user.nickname %>
            </td>
            <td class="p-0 pt-1", style="width:65%">
              <%= comment.comment_content %>
            </td>
            <td class="p-0", style="width:15%">
              <span class="small text-right d-block align-items-end"><%= comment.created_at.strftime('%Y/%m/%d') %></span>
              <div class="text-right"><%= link_to '削除する', admin_post_book_comment_path(@post_book, comment), method: :delete, "data-confirm" => "本当に削除しますか？", class: 'text-danger' %></div>
            </td>
          </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>