<div class="container">
  <div class="row">
    <div class="col-6 mx-auto my-5">
      <%= search_form_for @search, url: admin_post_books_path do |f| %>
        <%= f.search_field :title_or_post_book_author_or_post_book_title_cont_any, placeholder: '投稿を検索' %>
        <%= f.collection_select :genre_id_eq, @genres, :id, :name, :include_blank => '指定なし', class: "form-control form-custom" %>
        <%= f.date_field :created_at_gteq, include_blank: true, class: 'form-control' %>
        <%= f.date_field :created_at_lteq_end_of_day, include_blank: true, class: 'form-control'  %>
        <%= f.button :type => "submit", style: 'border-style: none;' do %>
          <i class='fas fa-search'></i>
        <% end %>
      <% end %>
    </div>
  </div>
    <div class="col-lg-10 mx-auto border-top border-dark">
      <% @post_books.each do |post_book| %>
      <div class="row border-bottom border-dark">
        <div class="col-md-3 text-center mt-3">
          <%= attachment_image_tag post_book.user, :profile_image, :fill, 70, 60, fallback: "no_image.jpg", size:'150x100', class: 'rounded-circle' %>
          <p class="mb-0"><%= post_book.user.nickname %></p>
        </div>
        <div class="col-md-7 mt-2">
          <h2 class="text-dark"><u><%= link_to post_book.title, admin_post_book_path(post_book) %></u></h2>
          <h5 class="mt-3">著者: <%= post_book.post_book_author %>題名: <%= post_book.post_book_title %></h5>
          <p class="pt-3 mb-0">ジャンル: <%= post_book.genre.name %> コメント: <%= post_book.comments.count %>
          いいね: <%= post_book.favorites.count %></p>
        </div>
        <div class="col-md-2 px-0 d-flex align-items-end justify-content-end">
          <p class="small mb-0">投稿日: <%= post_book.created_at.strftime('%Y/%m/%d') %></p>
        </div>
      </div>
      <% end %>
    </div>
</div>