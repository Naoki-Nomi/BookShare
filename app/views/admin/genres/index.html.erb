<div class="container">
  <div class="row">
    <div class="col-md-7 col-lg-6">
      <table class="table table-hover mt-5">
        <thead>
          <tr>
            <th>ジャンル一覧</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td class="pl-5"><%= genre.name %></td>
            <td><%= link_to '編集する', edit_admin_genre_path(genre), class: 'btn btn-success float-right' %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-sm-12 col-md-8 col-lg-5 mt-5 offset-lg-1">
      <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
        <label>新規登録</label>
      <div class="form-inline">
        <%= f.text_field :name, class: 'form-control mb-2 mb-md-0' %>
        <%= f.submit '新規登録する', class: 'btn btn-success ml-md-3' %>
      <% end %>
      </div>
    </div>
  </div>
</div>