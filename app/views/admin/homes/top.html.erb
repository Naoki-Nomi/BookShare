<div class="container">
  <div class="row">
    <div class="col-6 mx-auto bg-primary my-5">
      検索フィールド
    </div>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td></td>
        <td>ニックネーム</td>
        <td>Eメールアドレス</td>
        <td>登録日</td>
        <td>ステータス</td>
        <td></td>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag user, :profile_image, :fill, 70, 60, fallback: "no_image.jpg", size:'150x100', class: 'rounded-circle' %></td>
        <td><%= user.nickname %></td>
        <td><%= user.email %></td>
        <td><%= user.created_at.strftime('%Y/%m/%d') %></td>
        <td><%= user.is_deleted %></td>
        <td><%= link_to "編集する", edit_admin_user_path(user), class: "btn btn-sm btn-success" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>