<!DOCTYPE html>
<html>
  <head>
    <title>BookShare</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm fixed-top bg-light">
      <nav class="navbar navbar-expand-lg navbar-light p-0">
        <div class="container-fluid m-0">
          <a class="navbar-brand p-3" href="/">
            <%= image_tag 'logo.jpg', size: "55x30", class: "d-inline-block align-top" %>
            <span class="logo_name">BookShare</span>
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto font-weight-bold">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to user_path(current_user.id), class: 'nav-link text-dark' do %>
                  <i class="fas fa-home"></i> マイページ
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_post_book_path, class: 'nav-link text-dark ml-1' do %>
                  <i class="fas fa-feather-alt"></i> 新規投稿
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to post_books_path, class: 'nav-link text-dark ml-1' do %>
                  <i class="fas fa-copy"></i> 投稿一覧
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_book_path, class: 'nav-link text-dark ml-1' do %>
                  <i class="fas fa-bookmark"></i> 読書記録
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to books_path(user_id: current_user.id), class: 'nav-link text-dark ml-1' do %>
                  <i class="fas fa-book-open"></i> 読書一覧
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-dark ml-1' do %>
                  <i class="fas fa-sign-out-alt"></i> ログアウト
                <% end %>
              </li>
            <% elsif admin_signed_in? %>
              <li class="nav-item">
                <%= link_to 'ジャンル一覧', admin_genres_path, class: 'nav-link text-dark mx-2' %>
              </li>
              <li class="nav-item">
                <%= link_to '会員一覧', admin_root_path, class: 'nav-link text-dark mx-2' %>
              </li>
              <li class="nav-item">
                <%= link_to '投稿一覧', admin_post_books_path, class: 'nav-link text-dark mx-2' %>
              </li>
              <li class="nav-item">
                <%= link_to 'お問い合わせ', admin_contacts_path, class: 'nav-link text-dark mx-2' %>
              </li>
              <li class="nav-item">
                <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: 'nav-link text-dark ml-2' %>
              </li>
              <% else %>
              <li class="nav-item">
                <%= link_to new_user_registration_path, class: 'nav-link text-dark mx-2' do %>
                  <i class="fas fa-user-plus"></i> 新規登録
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_user_session_path, class: 'nav-link text-dark ml-2' do %>
                  <i class="fas fa-sign-in-alt"></i> ログイン
                <% end %>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main class="mb-auto mt-5">
    <%= yield %>
    </main>
    <footer>
      <p class="fotter-text text-center py-2 mt-5 mb-0 font-weight-bold">
        Copyright © BookShare
      <%= link_to new_contact_path, class: "text-dark" do %>
        <i class="fas fa-envelope"></i>お問い合わせ
      <% end %>
      </p>
    </footer>
  </body>
</html>
