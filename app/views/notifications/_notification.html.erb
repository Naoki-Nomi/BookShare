<% visitor = notification.visitor %>
<div class="col-md-6.mx-auto">
  <div class="form-inline">
    <span>
      <%= link_to user_path(visitor) do %>
        <%= attachment_image_tag visitor, :profile_image, :fill,100,100, format: "jpeg", fallback: "no_image.jpg", size: "50x50", class: "rounded-circle" %>
      <strong><%= visitor.nickname %></strong>
      <% end %>
      <%= 'さんが' %>

      <% case notification.action %>
      <% when 'follow' %>
        <%= "あなたをフォローしました" %>
      <% when 'favorite' %>
        <%= link_to "あなたの投稿", post_book_path(notification.post_book) %>
        <%= "にいいねしました" %>
      <% when 'comment' %>
        <%= link_to "あなたの投稿", post_book_path(notification.post_book) %>
        <%= "にコメントしました" %>
      <% end %>
    </span>
  </div>
  <div class="small text-muted text-right">
    <%= time_ago_in_words(notification.created_at).upcase %>
  </div>
</div>