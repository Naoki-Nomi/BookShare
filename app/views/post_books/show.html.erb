<div class="container mt-5">
  <div class="row">
    <div class="col-11 col-md-8 mx-auto mt-4">
      <div class="row">
        <div class="col-12 col-lg-3 mx-auto px-0 mt-4">
          <%= attachment_image_tag @post_book, :post_book_image, fallback: "no_image_book.jpg", size:'145x115' %>
          <p class="mt-3 mb-0"><%= @post_book.post_book_author %></p>
          <p>『<%= @post_book.post_book_title %>』</p>
        </div>
        <div class="col-12 col-lg-9 mx-auto p-0">
          <div class="text-right">
            <% if @post_book.user == current_user %>
              <%= link_to "編集する", edit_post_book_path(@post_book), class: 'btn btn-sm btn-success' %>
              <%= link_to "削除する", post_book_path(@post_book), method: :delete, "data-confirm" => "本当に削除しますか？", class: 'btn btn-sm btn-danger' %>
            <% end %>
          </div>
          <div class="row">
            <div class="col-md-3 col-lg-2 p-0 text-center mt-3">
              <%= link_to user_path(@post_book.user_id) do %>
                <%= attachment_image_tag @post_book.user, :profile_image, fallback: "no_image.png", size:'100x70' %>
                <p class="text-dark"><%= @post_book.user.nickname %></p>
              <% end %>
            </div>
            <div class="col-md-9 col-lg-10 p-0">
              <p class="small text-right mr-3 mb-md-0"><%= @post_book.created_at.strftime('%Y/%m/%d') %></p>
              <h3 class="text-center font-weight-bold mr-lg-5 mt-lg-2"><%= @post_book.title %></h3>
            </div>
          </div>
          <p class="mt-3 mt-md-0 ml-3 mb-0 text-right">
            <span class="border mx-2"><%= @post_book.genre.name %></span>
            <i class="fas fa-comments"></i>: <%= @post_book.comments.count %>
            <i class="fas fa-thumbs-up"></i>: <%= @post_book.favorites.count %>
          </p>
          <p class="text-right">
            <% if @post_book.favorited_by?(current_user) %>
              <%= link_to post_book_favorites_path(@post_book), method: :delete do %>
                <i class="fas fa-thumbs-up"></i>いいね取り消す
              <% end %>
            <% else %>
              <%= link_to post_book_favorites_path(@post_book), method: :post do %>
                <i class="far fa-thumbs-up"></i>いいねする
              <% end %>
            <% end %>
          </p>
        </div>
      </div>
      <div class="row">
        <span><投稿内容></span>
        <div class="col-12 border">
          <%= @post_book.content %>
        </div>
      </div>
      <div class="row mt-5">
        <span><コメント></span>
        <table class="table">
          <% @post_book.comments.each do |comment| %>
          <tr class="border-bottom">
            <td class="text-center p-0", style="width:20%">
              <%= attachment_image_tag comment.user, :profile_image, fallback: "no_image_book.jpg", size:'100x70', class: 'pb-comment-image' %><br>
              <%= comment.user.nickname %>
            </td>
            <td class="p-0 pt-1", style="width:65%">
              <%= comment.comment_content %>
            </td>
            <td class="p-0", style="width:15%">
              <span class="small text-right d-block align-items-end"><%= comment.created_at.strftime('%Y/%m/%d') %></span>
              <% if comment.user == current_user %>
                <div class="text-right"><%= link_to '削除する', post_book_comment_path(@post_book, comment), method: :delete, "data-confirm" => "本当に削除しますか？", class: 'text-danger' %></div>
              <% end %>
            </td>
          </tr>
          <% end %>
        </table>
      </div>
      <span class="alert">
        <% if @comment.errors.any? %>
          <%= @comment.errors.count %>件のエラーが発生しました
          <% @comment.errors.full_messages.each do |message| %>
            <%= message %>
          <% end %>
        <% end %>
      </span>
        <div class="form-group mt-3">
          <%= form_with(model:[@post_book, @comment], local:true) do |f| %>
            <%= f.text_area :comment_content, autofocus: true, size: "20x5", placeholder: "コメントを入力", class: 'form-control' %>
            <%= f.submit "コメントを投稿する", class: 'btn btn-success mt-2 float-right' %>
          <% end %>
        </div>
    </div>
  </div>
</div>