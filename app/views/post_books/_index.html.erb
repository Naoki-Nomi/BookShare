<div class="container mt-5">
  <%= form_with url: search_post_books_path, method: :get, local: true do |f| %>
  <div class="row form-group m-0 mb-1">
    <div class="col-7 col-md-5 col-lg-3 p-0 offset-md-2 offset-lg-4"><%= f.text_field :search, placeholder: 'キーワードを入力', class: 'form-control form-control-sm' %></div>
    <div class="col-4 col-md-2 col-lg-1 p-0 ml-2"><%= f.select :genre_id, options_from_collection_for_select(genres, :id, :name), { prompt: "ジャンル" }, { class: 'form-control form-control-sm' }%></div>
  </div>
  <div class="row form-group m-0 mb-1">
    <div class="col-4 col-md-3 col-lg-2 p-0 offset-md-2 offset-lg-4"><%= f.date_field :post_from, class: 'form-control form-control-sm' %></div>
    <span>〜</span>
    <div class="col-4 col-md-3 col-lg-2 p-0"><%= f.date_field :post_to, class: 'form-control form-control-sm' %></div>
    <div class="col-2 col-md-2 col-lg-1"><%= f.submit "検索", class: 'btn btn-sm btn-success' %></div>
  </div>
  <%= f.hidden_field :user_id, :value => params[:user_id] %>
  <% end %>
  <table class="table table-hover mt-5 col-lg-8 mx-auto">
    <% post_books.each do |post_book| %>
    <tr class="border-bottom">
      <td class="text-center px-0 pb-0", style='width:25%'>
        <%= link_to user_path(post_book.user_id) do %>
          <%= attachment_image_tag post_book.user, :profile_image, fallback: "no_image.png", size: '170x130', class: 'pb-index-image' %>
          <p class="mb-0 text-dark"><%= post_book.user.nickname %></p>
        <% end %>
      </td>
      <td class="p-0 pt-3 m-0", style='width:75%'>
        <h4><u><%= link_to post_book.title, post_book_path(post_book) %></u></h4>
          <p class="mt-3">著者: <%= post_book.post_book_author %>　題名: <%= post_book.post_book_title %></p>
          <div class="small mt-3">
            <span class="border"><%= post_book.genre.name %></span>　<i class="fas fa-comments"></i>: <%= post_book.comments.count %>　<i class="fas fa-thumbs-up"></i>: <%= post_book.favorites.count %>
          </div>
          <div class="small mt-3 d-flex justify-content-end">投稿日: <%= post_book.created_at.strftime('%Y/%m/%d') %></div>
      </td>
    </tr>
  <% end %>
  </table>
</div>
<div class="row">
  <div class="d-block mx-auto small"><%= paginate post_books %></div>
</div>