<div class="container">
  <div class="row">
    <div class="col-lg-4 text-center mt-3">
      <h6>2021年の読書数</h6>
      <%= link_to "年間で表示", detail_path(period: 0), class: "btn btn-success" %>
      <%= link_to "月間で表示", detail_path(period: 1), class: "btn btn-success" %>
      <%= line_chart @books_number, width: "300px", height: "400px", curve: false, messages: {empty: "No data"}, label: "Value" %>
    </div>
    <div class="col-lg-4 text-center mt-3">
      <h6>よくお読みになっている<br>著者</h6>
      <%= link_to "全ての著者を表示", detail_path(author_number: 0), class: "btn btn-success" %>
      <%= bar_chart @author_for_graph, width: "300px", height: "400px", messages: {empty: "No data"}, label: "Value" %>
    </div>
    <div class="col-lg-4 text-center mt-3">
      <h6>ジャンル</h6>
      <div class="mx-auto"><%= pie_chart @genre_for_graph, width: "320px", height: "400px", legend: "bottom", messages: {empty: "No data"}, label: "Value" %></div>
    </div>
  </div>
</div>