<div class="container mt-5">
  <div class="row">
    <div class="col text-center mupage-image">
      <%= attachment_image_tag @user, :profile_image, :fill, 150, 150, fallback: "no_image.png", class: 'rounded' %>
      <p><%= @user.nickname %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-10 mx-auto">
      <div class="row mt-2">
        <div class="col-6 col-md-3 col-lg-2 offset-1 offset-md-2 offset-lg-3 px-0">
          <ul class="list-group">
            <li class="list-group-item border-0 px-0 py-1">◆ フォロー数:</li>
            <li class="list-group-item border-0 px-0 py-1">◆ フォロワー数:</li>
            <li class="list-group-item border-0 px-0 py-1">◆ 総投稿数:</li>
            <li class="list-group-item border-0 px-0 py-1">◆ 総登録読書数:</li>
          </ul>
        </div>
        <div class="col-3 col-md-1 col-lg-1 px-0">
          <ul class="list-group text-center">
            <li class="list-group-item border-0 px-0 py-1"><%= link_to @user.follower.count, relationship_path(id: @user, relationship_order: 0), class: 'text-dark' %></li>
            <li class="list-group-item border-0 px-0 py-1"><%= link_to @user.followed.count, relationship_path(id: @user, relationship_order: 1), class: 'text-dark' %></li>
            <li class="list-group-item border-0 px-0 py-1"><%= link_to @user.post_books.count, post_books_path, class: 'text-dark' %></li>
            <li class="list-group-item border-0 px-0 py-1"><%= link_to @user.books.count, books_path(user_id: @user.id, book_sort: 0), class: 'text-dark' %></li>
          </ul>
        </div>
        <div class="col-md-5 col-lg-5 offset-1 offset-md-0 mt-3 mt-md-0 ml-md-4 ml-lg-0 px-0">
          <ul class="list-group">
          <% if @user == current_user %>
            <li class="list-group-item border-0 pt-1 pb-1 ml-lg-4 px-0">
              <%= link_to edit_user_path(current_user.id), class: 'text-dark' do %>
                <i class="fas fa-edit"></i> プロフィールを編集する
              <% end %>
            </li>
            <li class="list-group-item border-0 py-2 ml-lg-4 px-0">
              <%= link_to post_books_path(user_id: @user.id, book_sort: 0), class: 'text-dark' do %>
                <i class="fas fa-share-square"></i> ご自身の投稿一覧を確認する
              <% end %>
            </li>
            <li class="list-group-item border-0 py-2 ml-lg-4 px-0">
              <%= link_to books_path(user_id: @user.id, book_sort: 0), class: 'text-dark' do %>
                <i class="fas fa-book-open"></i> 読書記録を確認する
              <% end %>
            </li>
            <li class="list-group-item border-0 py-2 ml-lg-4 px-0">
              <%= link_to notifications_path, class: 'text-dark' do %>
                <i class="fas fa-exclamation-triangle"></i> 通知を確認する
              <% end %>
            </li>
            <li class="list-group-item border-0 py-2 ml-lg-4 px-0">
              <%= link_to user_confirm_path(current_user.id), class: 'text-dark' do %>
                <i class="fas fa-user-slash"></i> 退会する
              <% end %>
            </li>
          <% else %>
            <li class="list-group-item border-0 py-1"><%= link_to '◆ 〇〇さんの読書記録を確認する', books_path(user_id: @user.id, book_sort: 0)%></li>
            <li class="list-group-item border-0 py-1"><%= link_to '◆ 〇〇さんの投稿一覧を確認する', post_books_path(user_id: @user.id, book_sort: 0) %></li>
          <% end %>
          </ul>
          <% unless @user == current_user %>
            <% if current_user.following?(@user) %>
              <%= link_to "フォロー外す", unfollow_path(@user), method: :delete %>
            <% else %>
              <%= link_to "フォローする", follow_path(@user), method: :post %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-10 col-lg-7 px-0 mx-auto mypage-introduction">
      <span><自己紹介></span>
        <p class="border border-dark"><%= @user.introduction %></p>
    </div>
  </div>
</div>
