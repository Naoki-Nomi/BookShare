<div class="container mt-5">
  <span class="alert">
    <% if @contact.errors.any? %>
      <%= @contact.errors.count %>件のエラーが発生しました
      <% @contact.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>
  </span>
  <div class="row">
    <div class="col-md-10 col-lg-8 mx-auto">
      <h3 class="text-center mb-4">
        − お問い合わせ −
      </h3>
      <%= form_with model: @contact, url: contact_confirm_path, local:true do |f| %>
        <div class="form-group row">
          <label class="col-md-3 d-flex align-items-center">お名前</label>
          <div class="col-md-9"><%= f.text_field :name, autofocus: true, class: 'form-control' %></div>
        </div>
        <div class="form-group row">
          <label class="col-md-3 d-flex align-items-center">メールアドレス</label>
          <div class="col-md-9"><%= f.text_field :email, class: 'form-control' %></div>
        </div>
        <div class="form-group row">
          <label class="col-md-3">お問合わせ内容</label>
          <div class="col-md-9"><%= f.text_area :content, size: "20x5", class: 'form-control' %></div>
        </div>
            <%= f.submit "ご入力内容を確認", class: 'float-right' %>
      <% end %>
    </div>
  </div>
</div>