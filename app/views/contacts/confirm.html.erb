<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-lg-8 mx-auto">
      <h3 class="text-center mb-4">
        − ご入力内容の確認 −
      </h3>
      <div class="form-group row">
        <label class="col-md-3 d-flex align-items-center">お名前</label>
        <div class="col-md-9"><%= @contact.name %></div>
      </div>
      <div class="form-group row">
        <label class="col-md-3 d-flex align-items-center">メールアドレス</label>
        <div class="col-md-9"><%= @contact.email %></div>
      </div>
      <div class="form-group row">
        <label class="col-md-3">お問合わせ内容</label>
        <div class="col-md-9"><%= @contact.content %></div>
      </div>
          <%= link_to '内容を確定する', contacts_path, method: :post, class: 'btn btn-secondary float-right' %>
    </div>
  </div>
</div>